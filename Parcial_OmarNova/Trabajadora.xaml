                <ImageBrush ImageSource="/Fondo.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Height="392" VerticalAlignment="Center" HorizontalAlignment="Center" Width="728">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Rectángulo 2.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="Nombre del cliente:" HorizontalAlignment="Left" Margin="121,86,0,0" VerticalAlignment="Top" FontFamily="Aleo" FontSize="14"/>
        <Label Content="Cédula:" HorizontalAlignment="Left" Margin="198,133,0,0" VerticalAlignment="Top" FontFamily="Aleo" FontSize="14"/>
        <TextBox Name="txtNombreCliente" HorizontalAlignment="Left" Height="25" Margin="280,88,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <TextBox Name="txtCedula" HorizontalAlignment="Left" Height="25" Margin="280,135,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <Label Content="Pan:" HorizontalAlignment="Left" Margin="218,186,0,0" VerticalAlignment="Top" FontFamily="Aleo" FontSize="14"/>
        <ComboBox Name="cmbPanes" HorizontalAlignment="Left" Margin="280,191,0,0" VerticalAlignment="Top" Width="120"/>
